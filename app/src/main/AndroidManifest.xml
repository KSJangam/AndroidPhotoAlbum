<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidphotos07">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPhotos07">
        <activity android:name=".Search"
            android:label="@string/title_activity_search"
            android:parentActivityName=".Photos"
            android:theme="@style/Theme.AndroidPhotos07.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos07.Photos" />
        </activity>
        <activity
            android:name=".DisplayPhoto"
            android:label="@string/title_activity_display_photo"
            android:parentActivityName=".ShowAlbum"
            android:theme="@style/Theme.AndroidPhotos07.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos07.ShowAlbum" />
        </activity>
        <activity
            android:name=".ShowAlbum"
            android:label="@string/title_activity_show_album"
            android:parentActivityName=".Photos"
            android:theme="@style/Theme.AndroidPhotos07.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos07.Photos" />
        </activity>
        <activity android:name=".Photos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>